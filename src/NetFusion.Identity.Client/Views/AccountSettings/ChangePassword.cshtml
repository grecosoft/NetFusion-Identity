@{
    Layout = "_SettingsLayout";
}

@model ChangePasswordModel
<div id="restPassword" class="page-content row d-xl-flex justify-content-center">
    <div class="col-md-6">
        <section>
            <h2>Reset Password</h2>
            <hr/>
            <div class="alert alert-info" role="alert">
                Please enter your email address and enter a new password.
                Once complete.
            </div>
        </section>
        <section>
            <form method="post" asp-action="ChangePassword">
                <div class="form-floating">
                    <input asp-for="CurrentPassword" type="password" class="form-control"
                           aria-required="true" />
                    <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                </div>
                <div class="form-floating">
                    <input asp-for="NewPassword" type="password" class="form-control"
                           aria-required="true" />
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                </div>
                <div class="form-floating">
                    <input asp-for="ConfirmedPassword" type="password" class="form-control"
                           aria-required="true" />
                    <label asp-for="ConfirmedPassword" class="form-label">Renter Password</label>
                </div>
                
                <button type="submit" class="w-100 btn btn-lg btn-primary">Change Password</button>
            </form>
        </section>
    </div>
</div>





