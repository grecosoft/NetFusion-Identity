@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NetFusion.Identity.Client.Services

@inject ILoginInfoService LoginInfo

<ul class="navbar-nav">
    @if (LoginInfo.IsLoggedIn)
    {
        <li class="nav-item">
            <a class="nav-link text-dark bi bi-person-circle" title="Manage" asp-action="Overview"
               asp-controller="AccountSettings">&nbsp;@LoginInfo.Name</a>
        </li>
        <li class="nav-item">
            <form method="post" asp-action="ConfirmLogout" asp-controller="Authentication">
                <button type="submit" class="nav-link btn btn-link text-dark bi bi-box-arrow-left">&nbsp;Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="NewAccount" asp-controller="Registration">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark bi bi-box-arrow-in-right" asp-action="Login"
               asp-controller="Authentication">&nbsp;Login</a>
        </li>
    }
</ul>