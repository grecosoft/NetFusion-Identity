@model NetFusion.Identity.Client.Models.Authentication.LoginModel

<div id="authorize" class="page-content row d-xl-flex justify-content-center">
    <div class="col-md-4">
        <section>
            <form method="post" asp-action="Login">
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl"/>
                <h2>Dashboard Login</h2>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <label asp-for="Email" class="form-label">Email</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true"/>
                    <label asp-for="Password" class="form-label"></label>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberClient" class="form-label">
                            <input class="form-check-input" asp-for="RememberClient"/>
                            Remember
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
        <section class="options">
            <div>
                <p>
                    <a asp-action="SendPasswordRecovery" asp-controller="Authentication">Forgot Password</a>
                </p>
                <p>
                    <a asp-action="NewAccount" asp-controller="Registration">Register as New User</a>
                </p>
                <p>
                    <a asp-action="ResendEmailConfirmation" asp-controller="Registration">Resend Email Confirmation</a>
                </p>
            </div>
        </section>
    </div>
</div>
